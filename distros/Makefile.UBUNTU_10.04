BUILD_PACKAGES    = build-essential libcairo2-dev libpango1.0-dev libxml2-dev libexpect-perl libssl-dev snmp dpatch git-buildpackage
OS_PACKAGES       = libapache2-mod-python libapache2-mod-php5
USERADD_OPTIONS   = 
PACKAGE_INSTALL   = aptitude -y update ; aptitude -y install
APACHE_CONF_DIR   = /etc/apache2/conf.d
APACHE_INIT       = /etc/init.d/apache2
APACHE_USER       = www-data
APACHE_GROUP      = www-data
APACHE_BIN        = /usr/sbin/apache2
APACHE_CTL        = /usr/sbin/apache2ctl
APACHE_MODULE_DIR = /usr/lib/apache2/modules
BECOME_ROOT       = sudo su -c
ARCH              = $(shell dpkg --print-architecture)
