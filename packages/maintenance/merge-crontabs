import sys

sys.stdout.write("""#
# Do not edit this file. It will be recreated each time OMD 
# is started or reloaded. 
# 
# ------------------------------------------------------------
""")

for fn in sys.argv[1:]:
    lineno = 0
    sys.stdout.write("# %s\n" % (fn))
    for line in file(fn):
	lineno += 1
	ls = line.strip()
	sys.stdout.write(line)
    sys.stdout.write("# ------------------------------------------------------------\n")
