#!/bin/bash

case "$1" in
    refresh)
        if [ -e etc/cron.d/thruk.auto ]; then
            newversion=$(basename $(readlink version))
            sed -i etc/cron.d/thruk.auto -e "s|/omd/versions/[0-9\.]*/|/omd/versions/$newversion/|g" || echo "Updating Thruk Jobs Failed"
        fi
    ;;
esac
